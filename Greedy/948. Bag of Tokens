class Solution {
    public int bagOfTokensScore(int[] tokens, int power) {
        Arrays.sort(tokens);
        int n = tokens.length;
        int score = 0;
        int maxscore = 0;
        int l=0; 
        int r = n-1;
        while(l <= r){
            if(tokens[l] <= power){
                score += 1;
                power -= tokens[l];
                l++;
            }else if(tokens[r] >= power && score > 0){
                score -= 1;
                power += tokens[r];
                r--;
            }else{
                break;
            }
            maxscore = Math.max(score,maxscore);
        }
        return maxscore;
    }
}
