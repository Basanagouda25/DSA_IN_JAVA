class Solution {
    public ListNode mergeNodes(ListNode head) {
        ListNode dummy = new ListNode(0);
        ListNode newnode = dummy;
        ListNode p1 = head.next; //leave zero which is at head
        int sum = 0;
        while(p1 != null){
            if(p1.val !=0){
                sum = sum+p1.val;
            }else{
                newnode.next = new ListNode(sum); // add sum in new linked list
                newnode = newnode.next;
                sum = 0;
            }
            p1 = p1.next;
        }
        return dummy.next;
    }
}
