class Solution {
    public ListNode mergeInBetween(ListNode list1, int a, int b, ListNode list2) {
//take two pointers pointing in the list node
        ListNode p1 = list1;
        ListNode p2 = list1;
        int i=0;
        for( i=1; i<a; i++){ //iterate upto 1st node 
            p1 = p1.next;
            p2 = p2.next;
        }
        for( ; i<=b+1; i++){ //iterate upto 2nd node
            p2 = p2.next;
        }
        p1.next = list2; //connect pointer 1 to listnode 2 ie: a-1 to list2
        ListNode temp = list2; 
        while(temp.next != null){ //iterate in the listnode 2
            temp = temp.next;
        }
        temp.next=p2; //connect listnode 2 for pointer 2 ie: b+1;
        return list1;
    }
}
