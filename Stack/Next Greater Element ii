class Solution {
    public int[] nextGreaterElements(int[] nums) {
        Stack<Integer> st = new Stack<>();
        int[] ans = new int[nums.length];
        Arrays.fill(ans,-1);
        int n = ans.length;
        for(int i=0; i<2*n; i++){
            int idx = i % n;
            while(!st.isEmpty() && nums[idx] > nums[st.peek()]){
                int top = st.pop();
                ans[top] = nums[idx];
            }
            st.push(idx);
        }
        return ans;
    }
}
