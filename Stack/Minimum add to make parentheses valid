class Solution {
    public int minAddToMakeValid(String s) {
        int size=0;
        int open=0;
        for(char c:s.toCharArray()){
            if(c=='('){
                size++;
            }else if(size > 0){ //check if any open bracket is present or not
                opencount--;
            }else{
                open++;
            }
        }
        return open+size;
    }
}
