class Solution {
    public int maxDepth(String s) {
        int count=0;
        int num = 0;
        for(char c : s.toCharArray()){
            if(c == '('){
                count++;
                if(num < count){
                    num = count; //or 0
                }
            }
            else if(c == ')'){
                count--;
            }
        }
        return num;
    }
}
