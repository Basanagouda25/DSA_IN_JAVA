class Solution {
    public int[] dailyTemperatures(int[] temperatures) {
        Stack<Integer> st = new Stack<>();
        int[] ans = new int[temperatures.length];
        for(int i=0; i<ans.length; i++){
            while(!st.isEmpty() && temperatures[i] > temperatures[st.peek()]){ //uses monotonic stack
                int prev = st.pop();
                ans[prev] = i - prev;
            }
            st.push(i);
        }
        return ans;
    }
}
