class Solution {
    public boolean find132pattern(int[] nums) {
        Stack<Integer> st = new Stack<>();
        int n = nums.length;
        int num3 = Integer.MIN_VALUE;
        for(int i=n-1; i>=0; i--){
            if(nums[i] < num3){
                return true;
            }
            while(!st.isEmpty() && nums[i] > st.peek()){
                num3 = st.peek();
                st.pop();
            }
            st.push(nums[i]);
        }
        return false;
    }
}
