// Brute Force
class Solution {
    public void sortStack(Stack<Integer> st) {
        Stack<Integer> temp = new Stack<Integer>();
        
        while(!st.isEmpty()){
            int x = st.pop();
            
            while(!temp.isEmpty() && temp.peek() < x){
                st.push(temp.pop());
            }
            temp.push(x);
        }
        while(!temp.isEmpty()){
            st.push(temp.pop());
        }
    }
}

// Using Recurssion
class Solution {
    public void sortStack(Stack<Integer> st) {
        if(st.isEmpty()){
            return;
        }
        int x = st.pop();
        sortStack(st);
        insert(st,x);
    }
    public void insert(Stack<Integer> st,int x)
    {
        if(st.isEmpty() || st.peek() <= x){
            st.push(x);
            return;
        }
        int temp = st.pop();
        insert(st,x);
        st.push(temp);
    }
}
