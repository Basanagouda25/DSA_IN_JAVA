Brute Force:
class Solution {
    public int lastRemaining(int n) {
        int head = 1;
        int step = 1;
        int size = n;
        boolean lefttoright = true;

        while(size > 1){
            if(size % 2 != 0 || lefttoright){
                head += step;
            }
            step *=2;
            size /= 2;
            lefttoright = !lefttoright;
        }
        return head;
    }
}
Resurssive solution:
class Solution {
    public int lastRemaining(int n) {
        return answer(n,true);
    }

    public int answer(int n,boolean ltr){
        if(n == 1){
            return 1;
        }
        if(ltr || n % 2 != 0){
            return 2 * answer(n/2,!ltr);
        }else{
            return 2 * answer(n/2,!ltr)-1;
        }
    }
}
