class Solution {
    static final int M = 1_000_000_007;
    public int numSub(String s) {
      long onecount=0;
      long result = 0;
      for(char c:s.toCharArray()){
        if(c == '1'){
            onecount++;
            result = (result + onecount) % M;
        }else{
            onecount = 0;
        }
      }
      return(int) result;
    }
}
