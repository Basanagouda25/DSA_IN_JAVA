class Solution {
    public int gcd(int a, int b) {
        a = Math.abs(a);
        b = Math.abs(b);
        while (b != 0) {
            int temp = b;
            b = a % b;
            a = temp;
        }
        return a;
    }

    public int minOperations(int[] nums) {
        int n = nums.length;
        int totalgcd = nums[0];
        for(int i=1; i< n; i++){
            totalgcd = gcd(totalgcd,nums[i]);
        }

        if(totalgcd > 1){
            return -1;
        }

        int onecount = 0;
        for(int num : nums){
            if(num == 1){
                onecount++;
            }
        }

        if(onecount > 0){
            return n - onecount;
        }

        int opr = 0;
        int min = Integer.MAX_VALUE;
        for (int i = 0; i < n-1; i++) {
            int g = nums[i];
            for(int j=i+1; j < n; j++){
                g = gcd(g, nums[j]); 
                if (g == 1) {
                    min = Math.min(min, j-i+1);
                    break;
                }
            }
        }
        if (min !=  Integer.MAX_VALUE) {
            return (min-1) + (n-1);
        }
        return -1;
    }
}
